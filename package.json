{
  "name": "movie-backend-api",
  "version": "1.0.0",
  "description": "Movie streaming platform backend API",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "prisma generate && nest build",
    "start": "node dist/src/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start:prod": "node dist/src/main.js",
    "worker": "WORKER=true node dist/src/worker.js",
    "worker:dev": "WORKER=true ts-node-dev --respawn --transpile-only src/worker.ts",
    "migration:generate": "prisma migrate dev",
    "migration:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
